{
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"liveServer.settings.donotShowInfoMsg": true,
	"explorer.confirmDragAndDrop": false,
	"workbench.editor.empty.hint": "hidden",
	"explorer.confirmDelete": false,
	"terminal.integrated.enableMultiLinePasteWarning": "auto",
	"liveServer.settings.donotVerifyTags": true,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"tailwindCSS.classAttributes": ["class", "className", "ngClass", "variants"],
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.external.osxExec": "iTerm.app",
	"workbench.settings.applyToAllProfiles": [
		"workbench.colorCustomizations",
		"editor.fontFamily"
	],
	"files.autoSave": "onFocusChange",
	"eslint.run": "onSave",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"editor.fontSize": 15,
	"editor.fontFamily": "FiraCode Nerd Font",
	"editor.fontWeight": "500",
	"editor.minimap.enabled": false,
	"editor.lineHeight": 1.75,
	"editor.lineNumbers": "relative",
	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1
	},
	"window.newWindowProfile": "Default",
	"editor.cursorBlinking": "expand",
	"vscode-neovim.compositeKeys": {},
	"window.systemColorTheme": "auto",
	"zenMode.centerLayout": false,
	"workbench.startupEditor": "none",
	"editor.linkedEditing": true,
	"surround.custom": {
		"surround.with.squareBrackets": {
			"label": "[ ... ]",
			"description": "Surround content with square brackets",
			"snippet": "[$TM_SELECTED_TEXT]$0"
		},
		"surround.with.singleQuotes": {
			"label": "' ... '",
			"description": "Surround content with single quotes",
			"snippet": "'$TM_SELECTED_TEXT$0'",
			"languageIds": ["*"]
		},
		"surround.with.curlyBraces": {
			"label": "{ ... }",
			"description": "Surround content with curly braces",
			"snippet": "{${TM_SELECTED_TEXT}}$0"
		},
		"surround.with.doubleQuotes": {
			"label": "\" ... \"",
			"description": "Surround content with double quotes",
			"snippet": "\"$TM_SELECTED_TEXT$0\"",
			"languageIds": ["*"]
		},
		"surround.with.parentheses": {
			"label": "( ... )",
			"description": "Surround content with parentheses",
			"snippet": "($TM_SELECTED_TEXT)$0"
		},
		"surround.with.divElement": {
			"label": "<div> ... </div>",
			"description": "Surround content with div element",
			"snippet": "<div>${TM_SELECTED_TEXT}</div>",
			"languageIds": ["*"]
		}
	},
	"editor.cursorSmoothCaretAnimation": "explicit",
	"terminal.integrated.smoothScrolling": true,
	"editor.smoothScrolling": true,
	"terminal.integrated.tabs.enableAnimation": false,
	"security.workspace.trust.untrustedFiles": "open",
	"remote.extensionKind": {
		"asvetliakov.vscode-neovim": ["workspace"]
	},
	"remote.autoForwardPortsSource": "hybrid",
	"prettier.useTabs": true,
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"editor.suggest.showStatusBar": true,
	"window.customTitleBarVisibility": "auto",
	"window.titleBarStyle": "custom",
	"workbench.colorCustomizations": {},
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},
	"windsurf.enableSupercomplete": false,
	"windsurf.enableAutocomplete": false,
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"svelte.enable-ts-plugin": true,
	"terminal.integrated.lineHeight": 1.3,
	"editor.fontLigatures": "true",
	// "editor.fontLigatures": "'calt',  'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",
	"vscode-neovim.afterInitConfig": ["set ignorecase"],
	"cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
	"diffEditor.hideUnchangedRegions.enabled": true,
	"files.exclude": {
		"**/.trunk/*actions/": true,
		"**/.trunk/*logs/": true,
		"**/.trunk/*notifications/": true,
		"**/.trunk/*out/": true,
		"**/.trunk/*plugins/": true
	},
	"files.watcherExclude": {
		"**/.trunk/*actions/": true,
		"**/.trunk/*logs/": true,
		"**/.trunk/*notifications/": true,
		"**/.trunk/*out/": true,
		"**/.trunk/*plugins/": true
	},
	"editor.accessibilitySupport": "off",
	"cursor.composer.shouldChimeAfterChatFinishes": true,
	"git.enableSmartCommit": true,
	"terminal.integrated.fontSize": 13,
	"workbench.iconTheme": "vscode-great-icons",
	"workbench.colorTheme": "Atom One Dark",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"workbench.editor.enablePreview": false
}
